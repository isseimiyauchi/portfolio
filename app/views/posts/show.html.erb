<div class=" like-container d-flex align-items-center m-5">
  <span class="box-title">
    <% if current_user.already_liked?(@post) %>
      <%= link_to post_like_path(@post), method: :delete, id: "delete_like" do %>
        <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
          <% else %>
            <%= link_to post_likes_path(@post), method: :post, id: "create_like" do %>
              <span class="fa fa-heart like-btn"></span>
              <% end %>
                <% end %>
                  閲覧件数: <%= @post.likes.count %>
  </span>
  <div class="container">
    <div class="row">
      <div class="post-box col-md-8 mt-5">
        <table class="table-custom">
          <tr>
            <th>タイトル</th>
            <td>
              <%= @post.title %>
            </td>
          </tr>
          <tr>
            <th>差出人</th>
            <td>
              <% @post.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>記事</th>
            <td>
              <%= @post.detail %>
            </td>
          </tr>
        </table>
      </div>
        <div class="comment-container col-6 col-md-4 mt-5">
          <div>
            <%= form_with(model:[@post, @comment], method: :post) do |f| %>
              <div class="form-group">
                <%= f.text_area :comment_content, size: "25x4" %>
              </div>
              <div class="form-group">
                <%= f.hidden_field :post_id, value: @post.id %>
              </div>
              <%= f.submit 'コメントする', class: "btn btn--blue btn--shadow" %>
            <% end %>
          </div>
          <div class="mt-3">
            <% @comments.each do |comment| %>
              <% @users=User.where(id: comment.user_id) %>
                <% @users.each do |user| %>
              <ul>
                <li class="comment-item">
                  <div class="balloon5">
                    <div class="faceicon">
                      <%= image_tag user.avatar.variant(resize:'50x50'), class: "icon" %>
                      <%= user.name %>
                    </div>
                    <div class="chatting">
                      <div class="says">
                        <p><%= comment.comment_content %></p>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
              <% end %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
