<div class="container">
  <div>
    <%= form_with model: Post.new do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" , class: "control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :from, "発信" , class: "control-label" %>
      <%= f.text_field :from, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :detail, "記事" , class: "control-label" %>
      <%= f.text_area :detail, class: "form-control", size: "60x12" %>
    </div>
    <div class="form-group">
      <%= f.submit "投稿" , class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
