<div class="container">
  <div class="p-5 m-5 shadow">
    <div>
      <h3>新規投稿</h3>
    </div>
    <%= form_with model: Post.new, local: true do |f| %>
      <%= render 'layouts/error_messages' , model: @post %>
      <div class="form-group mt-2">
        <%= f.label :title, "タイトル" , class: "control-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="check_box mt-2">
        <span>タグ</span>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <div>
            <%= tag.label do %>
              <%= tag.check_box %>
                <%= tag.text %>
                  <% end %>
          </div>
          <% end %>
      </div>
      <div class="form-group mt-2">
        <%= f.label :detail, "記事" , class: "control-label" %>
        <%= f.text_area :detail, class: "form-control", size: "60x12" %>
      </div>
      <div class="form-group mt-2">
        <%= f.submit "投稿" , class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
