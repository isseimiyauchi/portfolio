<div class="container mt-5 ml-5">
  <div class="row">
    <div>
      <h2>検索結果</h2>
    </div>
    <div class="row">
      <div class="card-group mb-3">
        <% @search_posts.each do |post| %>
          <div class="card my-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">
                <%= post.title %>
              </h5>
              <p class="card-text">
                <%= post.from %>
              </p>
              <p class="card-text">
                <%= post.created_at %>
              </p>
              <%= link_to "詳細" , post %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
