<div class="container">
  <div class="page-title mt-5 mb-5">
    <h3>検索結果</h3>
  </div>
  <div>
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th scope="col">タイトル</th>
          <th scope="col">差出人</th>
          <th scope="col">投稿日時</th>
          <th scope="col">詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @search_posts.each do |post| %>
          <tr>
            <td>
              <%= post.title %>
            </td>
            <td>
              <% post.tags.each do |tag| %>
                <%= tag.tag_name %>
              <% end %>
            </td>
            <td>
              <%= post.created_at.strftime("%Y年%m月%d日") %>
            </td>
            <td>
              <%= link_to "詳細" , post, id: "link_to_post" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
